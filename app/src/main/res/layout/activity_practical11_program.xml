<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practical_11_Program">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="22dp"
        android:fontFamily="sans-serif-black"
        android:text="Select any Subjects:"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/chBox1_For_Practical11_Program"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/chBox1_For_Practical11_Program"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="15dp"
        android:text="Maths"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/chBox3_For_Practical11_Program"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/chBox2_For_Practical11_Program"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        android:text="MAD"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chBox3_For_Practical11_Program" />

    <CheckBox
        android:id="@+id/chBox3_For_Practical11_Program"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        android:text="C++"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chBox1_For_Practical11_Program" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="34dp"
        android:fontFamily="sans-serif-black"
        android:text="Select a Gender:"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/genderButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chBox2_For_Practical11_Program" />

    <RadioGroup
        android:id="@+id/genderButtons"
        android:layout_width="113dp"
        android:layout_height="99dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toTopOf="@+id/submit_For_Practical11_Program"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female" />

    </RadioGroup>

    <Button
        android:id="@+id/submit_For_Practical11_Program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="120dp"
        android:text="Submit Selection"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderButtons" />

</androidx.constraintlayout.widget.ConstraintLayout>